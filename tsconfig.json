{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "strict": false,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "sourceMap": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "src/config"
  ]
}